{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "test/**/*.ts"],
    "exclude": [
        "node_modules",
        "src/bml/__tests__/interpreter.test.ts",
        "src/bml/__tests__/parser.test.ts"
    ]
}
