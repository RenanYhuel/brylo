{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "test/**/*.ts"],
    "exclude": ["node_modules"]
}
